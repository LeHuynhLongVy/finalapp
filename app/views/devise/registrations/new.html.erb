
<%= stylesheet_link_tag "style" %>
<%= javascript_pack_tag "script"%>
  <div class="container-fluid font">
    <div class="row bg-primary1">
      <div class="col-lg-1 col-sm-2 d-flex justify-content-center">
        <a class="navbar-brand text-white font-weight-bold" href="#">Fotobook</a>
      </div>

      <div class="col-lg-7 col-sm-8">
        <input class="col rounded border-0 my-1 py-1" type="text" placeholder="Search Photo / Album" />
      </div>

        <div class="col-lg-4 col-sm-2 d-flex justify-content-lg-end justify-content-sm-center justify-content-center">
          <!-- <button class="btn navbut border-0 font-weight-bold">Login</button> -->
            <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn navbut' %><br />
        </div>
    </div>


    <div class="row" style="height:100px;">
    </div>

    <div class="row justify-content-center">
      <div class="col-12">
        <h2 class="text-center text-primary1-color">Fotobook Signup</h2>
      </div>
    </div>
    <div class="row justify-content-center my-3">
      <div class="col-xl-3 col-sm-6 text-center border rounded-lg py-3" >
        <img src="https://img.icons8.com/color/48/000000/google-logo.png" class="fas img-fluid col-auto" />
        <img src="https://img.icons8.com/color/48/000000/facebook-circled.png" class="img-fluid col-auto" />
        <img src="https://img.icons8.com/color/48/000000/twitter-circled.png" class="img-fluid col-auto" />
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-xl-3 col-sm-6 shadow border rounded bg-grey">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "signup_form", :class => "mt-5 col-12"}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group mx-5" style="font-size: 16px;">
          <div class="field">
            <%= f.label :firstname, class: "font-weight-bold"%><br />
            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", placeholder: "First Name", class: "border rounded-lg form-control pl-3"  %>
          </div>

          <div class="field">
            <%= f.label :lastname, class: "font-weight-bold" %><br />
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", placeholder: "Last Name", class: "border rounded-lg form-control pl-3" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "font-weight-bold" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class: "border rounded-lg form-control pl-3" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "font-weight-bold" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", id: "user_password", class: "border rounded-lg form-control pl-3" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "font-weight-bold" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password", class: "border rounded-lg form-control pl-3" %>
          </div>
        </div>
          <div class="actions form-group row justify-content-center">
            <%= f.submit "Signup", class: "btn chosen col-5 rounded-lg bg-primary1 text-white font-weight-bold" %>
          </div>
        <% end %>
      </div>
      </div>
    </div>
    <script type="text/javascript">
      <%= render "validate.js" %>
    </script>
