<%= stylesheet_link_tag "style" %>
<%= javascript_pack_tag "script"%>

<div class="container-fluid font justify-content-center">
  <div class="row bg-primary1">
    <div class="col-lg-1 col-sm-2 d-flex justify-content-center">
      <a class="navbar-brand text-white font-weight-bold" href="#">Fotobook</a>
    </div>

    <div class="col-lg-7 col-sm-8">
      <input class="col rounded border-0 my-1 py-1" type="text" placeholder="Search Photo / Album" />
    </div>

      <div class="col-lg-4 col-sm-2 d-flex justify-content-lg-end justify-content-sm-center justify-content-center">
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn navbut' %><br />
      </div>
  </div>

  <div class="row" style="height:100px;">
  </div>

  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <h2 class="text-center text-primary1-color">Fotobook Login</h2>
    </div>
  </div>

  <div class="row justify-content-center my-3">
    <div class="col-xl-2 col-sm-8 row border rounded-lg py-3 justify-content-center" >
      <img src="https://img.icons8.com/color/48/000000/google-logo.png" class="fas img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/facebook-circled.png" class="img-fluid col-auto" />
      <img src="https://img.icons8.com/color/48/000000/twitter-circled.png" class="img-fluid col-auto" />
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-xl-2 col-sm-8 row justify-content-center shadow border rounded bg-grey">
        <div class="col-12 row justify-content-center mt-5" >
            <img class="rounded-circle" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">
        </div>
      <!-- <form class="mt-5 col" action="#" method="post">
        <div class="form-group" style="font-size: 16px;">
          <input type="text" name="email"  id="email" placeholder="Email" class="border rounded-top form-control " style="height:50px" autofocus/>
          <input type="password" name="password" id="password" placeholder="Password" class="border rounded-bottom form-control pl-3" style="height:50px"/>
        </div>
        <div class="form-group row justify-content-center">
          <button class="btn chosen col-5 rounded-lg bg-primary1 text-white font-weight-bold" type="submit" name="button" style="height:50px;">Login</button>
        </div>
      </form> -->

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "login_form", :class => "mt-5 col-12"})do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group" style="font-size: 16px;">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"border rounded-top form-control" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"border rounded-bottom form-control pl-3" %>
        </div>
      </div>


        <div class="actions form-group row justify-content-center">
          <%= f.submit "Login", class: "btn chosen col-5 rounded-lg bg-primary1 text-white font-weight-bold" %>
        </div>

      <% end %>


      <!-- <#%= render "devise/shared/links" %> -->

        <div class="col-12 row justify-content-center mb-2">
            <!-- <a href="#" class="text-color">Forgot password?</a> -->
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
            <% end %>
        </div>
    </div>
        <div class="col-12 row justify-content-center mt-3">
          <!-- <a href="#" class="text-color">Create an account</a> -->
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Create an account", new_registration_path(resource_name) %><br />
          <% end %>
        </div>
  </div>
</div>
<script type="text/javascript">
  <%= render "validate.js" %>
</script>
