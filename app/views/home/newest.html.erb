<h1 class="text-center"> 4 Newest albums </h1>

<div class="row border-top">
  <% @counter = 1 %>
    <% @title.each do |i| %>
      <div class="col-lg-3 col-md-6 col-sm-12 border border-primary rounded bg-success">
        <p class="font-weight-bold"> Album <%=@counter%>: <%=i%> </p>
      </div>
      <%@counter+=1%>
    <%end%>
</div>
